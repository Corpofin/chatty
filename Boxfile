global:
  env:
    - APP_ENV: production

build:
  exec:
    - 'composer install --no-interaction --prefer-source --no-dev'
    - 'npm install'
  after_exec:
    - 'composer dump-autoload --optimize'
    - 'node_modules/.bin/gulp --production'
  lib_dirs:
    - vendor
    - node_modules
  reuse_libs: true

web1:
  type: php
  php_extensions:
    - curl
    - json
    - mbstring
    - mcrypt
    - tokenizer
    - pdo_mysql
    - xcache
    - redis
  httpd_document_root: public
  network_dirs:
    - storage/framework
    - storage/app
  nonpersistent_writable_dirs:
    - bootstrap/cache
    - storage/cache
  log_watch:
    laravel[error]: 'storage/logs/laravel.log'
  before_deploy:
    - 'php artisan migrate --no-interaction --force'